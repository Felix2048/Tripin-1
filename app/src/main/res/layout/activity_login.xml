<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.tripin.activity.LoginActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_without_password"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/login_without_password"/>

    <EditText
        android:id="@+id/login_user_name"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:paddingLeft="8dp"
        android:hint="@string/login_user_name" />
    <EditText
        android:id="@+id/login_password"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:paddingLeft="8dp"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btn_login_button"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/shape"
        android:text="@string/btn_login_button"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/create_account"
        android:layout_marginTop="40dp"
        android:textColor="@color/app_color_blue_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/other_login_method"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_login_by_qq"
            android:background="@drawable/ic_wechat"
            android:layout_marginRight="20dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_login_by_wechat"
            android:background="@drawable/ic_qq"/>
    </LinearLayout>
</LinearLayout>